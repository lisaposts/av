<section id="benefits" class="ava-section ava-benefits">
  <div class="ava-container">
    <h2 class="ava-section__title">{{ section.settings.heading }}</h2>
    <p class="ava-section__subtitle">{{ section.settings.subheading }}</p>

    <div class="ava-benefits__grid">
      {%- for block in section.blocks -%}
        <article class="ava-card ava-benefit" {{ block.shopify_attributes }}>
          <h3 class="ava-card__title">{{ block.settings.title }}</h3>
          <p class="ava-card__text">{{ block.settings.text }}</p>
          {%- if block.settings.tag != blank -%}
            <span class="ava-pill">{{ block.settings.tag }}</span>
          {%- endif -%}
        </article>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ava Verve – Benefits",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why creators love Ava Verve"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Built for social media creators, marketers and founders who want better content, not more burnout."
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Make content 20× faster"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Skip the painful blank page. Plug our prompts into your favourite AI tool and ship campaigns in hours, not weeks."
        },
        {
          "type": "text",
          "id": "tag",
          "label": "Small tag (optional)",
          "default": "Time saver"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ava Verve – Benefits",
      "category": "Ava Verve",
      "blocks": [
        { "type": "benefit" },
        { "type": "benefit" },
        { "type": "benefit" }
      ]
    }
  ]
}
{% endschema %}
