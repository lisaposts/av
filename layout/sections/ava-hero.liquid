<section class="ava-section ava-hero">
  <div class="ava-container ava-hero__grid">
    <div class="ava-hero__content">
      <p class="ava-kicker">{{ section.settings.kicker }}</p>
      <h1 class="ava-hero__title">{{ section.settings.heading }}</h1>
      <p class="ava-hero__subtitle">{{ section.settings.subheading }}</p>
      <div class="ava-hero__cta-row">
        {%- if section.settings.primary_button_label != blank -%}
          <a href="{{ section.settings.primary_button_link }}" class="ava-btn ava-btn--primary">
            {{ section.settings.primary_button_label }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_button_label != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="ava-btn ava-btn--ghost">
            {{ section.settings.secondary_button_label }}
          </a>
        {%- endif -%}
      </div>
      <p class="ava-hero__note">{{ section.settings.hero_note }}</p>
    </div>

    {%- if section.settings.hero_image != blank -%}
      <div class="ava-hero__media">
        <img
          src="{{ section.settings.hero_image | image_url: width: 900 }}"
          alt="{{ section.settings.hero_image_alt | escape }}"
          class="ava-hero__image"
        >
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Ava Verve – Hero",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Eyebrow text",
      "default": "AI content academy for creators"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Create AI-powered content that actually sells"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Learn to use AI like a creative director, not like a robot. One-page lessons, plug-and-play prompts and templates for creators, marketers and entrepreneurs."
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Browse lessons"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Watch how it works"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero image or mockup"
    },
    {
      "type": "text",
      "id": "hero_image_alt",
      "label": "Hero image alt text",
      "default": "Preview of Ava Verve AI content lessons"
    },
    {
      "type": "text",
      "id": "hero_note",
      "label": "Small note under buttons",
      "default": "Finish a lesson in 10 minutes. Start selling content packages in weeks, not years."
    }
  ],
  "presets": [
    {
      "name": "Ava Verve – Hero",
      "category": "Ava Verve"
    }
  ]
}
{% endschema %}
