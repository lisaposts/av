<section id="how-it-works" class="ava-section ava-how">
  <div class="ava-container">
    <h2 class="ava-section__title">{{ section.settings.heading }}</h2>
    <p class="ava-section__subtitle">{{ section.settings.subheading }}</p>

    <ol class="ava-how__steps">
      {%- for block in section.blocks -%}
        <li class="ava-how__step" {{ block.shopify_attributes }}>
          <span class="ava-how__step-number">{{ forloop.index }}</span>
          <div>
            <h3 class="ava-how__step-title">{{ block.settings.title }}</h3>
            <p class="ava-how__step-text">{{ block.settings.text }}</p>
          </div>
        </li>
      {%- endfor -%}
    </ol>
  </div>
</section>

{% schema %}
{
  "name": "Ava Verve – How it works",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How Ava Verve works"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Learn in snackable one-page lessons, then apply with plug-and-play prompts and templates."
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Pick your goal"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Launch a new offer, refresh your feed, or build a content system for your clients."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ava Verve – How it works",
      "category": "Ava Verve",
      "blocks": [
        { "type": "step" },
        { "type": "step" },
        { "type": "step" }
      ]
    }
  ]
}
{% endschema %}
