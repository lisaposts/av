<!doctype html>
<html lang="{{ request.locale.iso_code | default: 'en' }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <title>
      {%- if page_title != blank -%}
        {{ page_title }} – Ava Verve
      {%- else -%}
        Ava Verve Academy
      {%- endif -%}
    </title>

    {%- if meta_description != blank -%}
      <meta name="description" content="{{ meta_description | escape }}">
    {%- else -%}
      <meta name="description" content="Ava Verve teaches creators, marketers and entrepreneurs to create AI-powered content fast with simple one-page lessons, prompts and templates.">
    {%- endif -%}

    <meta property="og:title" content="{{ page_title | default: 'Ava Verve Academy' }}">
    <meta property="og:description" content="{{ meta_description | default: 'AI content academy for creators, marketers and entrepreneurs.' | escape }}">

    {%- if settings.social_sharing_image != blank -%}
      <meta property="og:image" content="{{ settings.social_sharing_image | image_url }}">
      <meta name="twitter:image" content="{{ settings.social_sharing_image | image_url }}">
    {%- endif -%}
    <meta name="twitter:card" content="summary_large_image">

    {%- if settings.favicon != blank -%}
      <link rel="icon" href="{{ settings.favicon | image_url: width: 64 }}" type="image/png">
    {%- endif -%}

    {{ 'theme.css' | asset_url | stylesheet_tag }}

    {{ content_for_header }}
  </head>
  <body class="ava-verve-body">
    <header class="ava-header">
      <div class="ava-container ava-header__inner">
        <div class="ava-logo">
          {{ settings.logo_text | default: 'Ava Verve' }}
        </div>
        <nav class="ava-nav">
          <a href="#benefits">Benefits</a>
          <a href="#how-it-works">How it works</a>
          <a href="#offers">Offers</a>
          <a href="#faq">FAQ</a>
        </nav>
        {%- if shop.enabled_payment_types contains 'shop_pay' -%}
          <a href="/cart" class="ava-header__cta">View cart</a>
        {%- endif -%}
      </div>
    </header>

    <main role="main">
      {{ content_for_layout }}
    </main>

    <footer class="ava-footer-global">
      <div class="ava-container ava-footer-global__inner">
        <span>© {{ 'now' | date: '%Y' }} {{ shop.name }}</span>
        <span>{{ settings.footer_note }}</span>
      </div>
    </footer>
  </body>
</html>
