<section class="ava-section ava-testimonials">
  <div class="ava-container">
    <h2 class="ava-section__title">{{ section.settings.heading }}</h2>
    <p class="ava-section__subtitle">{{ section.settings.subheading }}</p>

    <div class="ava-testimonials__grid">
      {%- for block in section.blocks -%}
        <figure class="ava-card ava-testimonial" {{ block.shopify_attributes }}>
          <blockquote class="ava-testimonial__quote">“{{ block.settings.quote }}”</blockquote>
          <figcaption class="ava-testimonial__author">
            <span class="ava-testimonial__name">{{ block.settings.name }}</span>
            {%- if block.settings.role != blank -%}
              <span class="ava-testimonial__role">{{ block.settings.role }}</span>
            {%- endif -%}
          </figcaption>
        </figure>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ava Verve – Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Creators who already use Ava Verve"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "From solo creators to small agencies – see how they turned AI into a revenue tool, not a toy."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "I stopped spending my weekends stuck in Canva. Ava Verve gave me a system for batching content in one afternoon."
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Elena, content creator"
        },
        {
          "type": "text",
          "id": "role",
          "label": "Role / handle",
          "default": "@yourhandle"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ava Verve – Testimonials",
      "category": "Ava Verve",
      "blocks": [
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "testimonial" }
      ]
    }
  ]
}
{% endschema %}
